@{
    ViewData["Title"] = "Create/Edit Expense";
}

@model SpendingWeb.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create / Edit Expenses</h1>
</div>

<form asp-action="ExpensesList" asp-controller="Home">
    
    @* <label>ID</label> *@
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" /> 
    
    <label class="mt-4">Value $</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Amount" step="0.01"/> 
    
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Add Description Product Here!" asp-for="Description" />
    
    <label class="mt-4">Date</label>
    <input class="form-control" type="date" placeholder="dd/mm/yyyy" asp-for="Date" /> 

    <button class="btn btn-primary mt-4" type="submit">Save</button>
</form>

