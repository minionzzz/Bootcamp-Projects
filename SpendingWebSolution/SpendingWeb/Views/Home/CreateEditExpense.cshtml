@{
    ViewData["Title"] = "Create/Edit Expense";
}

@model SpendingWeb.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create / Edit Expenses</h1>
</div>

<form asp-action="ExpensesList" asp-controller="Home" enctype="multipart/form-data">
    
    @* <label>ID</label> *@
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" /> 

    <label class="mt-4">Category</label>
    <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
        <option value="">-- Select Category --</option>
    </select>
    
    <label class="mt-4">Value $</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Amount" step="0.01"/> 
    
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Add Description Product Here!" asp-for="Description" />
    
    <label class="mt-4">Date</label>
    <input class="form-control" type="date" placeholder="dd/mm/yyyy" asp-for="Date" /> 

    <label class="mt-4">Attachment (Bukti Transaksi)</label>
    <input type="file" class="form-control" name="Attachment" />

    @if (!string.IsNullOrEmpty(Model.AttachmentPath))
    {
        <div>
            <a href="@Model.AttachmentPath" target="_blank">Current Attachment</a>
            <input type="hidden" name="ExistingAttachmentPath" value="@Model.AttachmentPath" />
        </div>
    }

    <input type="file" name="Attachment" />

    <button class="btn btn-primary mt-4" type="submit">Save</button>
    <a class="btn btn-secondary mt-4" asp-action="Index">Back</a>
</form>

